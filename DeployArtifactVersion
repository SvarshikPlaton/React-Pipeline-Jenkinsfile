pipeline {
    agent { label 'node.js' }
    environment {
        SERVER_CREDENTIALS = 's3-test'
        WEBHOOK_URL = 'DiscordWebHook'
        BUCKET = 'test.khai'
    }
    parameters {
        string(name: 'BUILD_NUMBER', description: 'Deploy build number')
    }
    stages {
        stage('Download File') {
            steps {
                script {
                    withAWS(credentials: SERVER_CREDENTIALS, region: 'us-east-1') {
                        sh("pwd")
                        s3Download(bucket: BUCKET,
                                   path: "build-${BUILD_NUMBER}",
                                   overwrite: true,
                                   destination: './')
                    }
                }
            stage('deploy') {
                steps {
                        sh('pwd')
                    }
                }
            }
        }
    }
}